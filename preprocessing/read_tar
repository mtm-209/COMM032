from create_skew import *
import os
import tarfile
import time

import requests
from tqdm import tqdm


def open_tar(file_path, destination_dir):
    with tarfile.open(file_path, "r:gz") as tar:
        for member in tar.getmembers():
            if "validation.tsv" in member.name:
                val_lst = target_data('validation.tsv', skew = '50-50')
                return val_lst


def unit_test(a, b): 
    if a == b: 
        return "Pass"
    else: 
        return "Fail"

        