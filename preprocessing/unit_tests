import os


def check_shape(a, b):
    if a == b:
        return "Pass"
    else:
        return "Fail"


def check_for_repeated_mp3_files(main_folder_path):
    """
    Checks for repeated .mp3 files across all subfolders within a main folder.

    Args:
    main_folder_path (str): The path to the main folder containing subfolders to search.

    Returns:
    A string indicating whether any repeat files were found.
    """

    all_mp3_files = []
    for foldername, subfolders, filenames in os.walk(main_folder_path):
        for filename in filenames:
            if filename.endswith('.mp3'):
                all_mp3_files.append(os.path.join(foldername, filename))

    if len(all_mp3_files) == len(set(all_mp3_files)):
        return print(len(all_mp3_files),"There are no repeat files")
    else:
        return "There is a file repeated"


main_folder_path = r"C:\Users\matth\OneDrive\Documents\COMM032\datatest"
result = check_for_repeated_mp3_files(main_folder_path)
print(result)
