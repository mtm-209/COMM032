def unzip_tar_gz(file_path, destination_dir):
    with tarfile.open(file_path, "r:gz") as tar:
        for member in tar.getmembers():
            if "clips" in member.name:
                tar.extract(member, destination_dir)
            elif "validation.tsv" in member.name:
                tar.extract(member, destination_dir)
    print("Files unzipped successfully to:", destination_dir)


